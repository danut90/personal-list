script.
	$(document).ready(function () {
		$('.dropdown').hover(
			function () {
				$('.dropdown-menu', this).stop(true, true).slideDown(0);
				$(this).removeClass('open');
			},
			function () {
				$('.dropdown-menu', this).stop(true, true).slideUp(0);
				$(this).removeClass('open');
			}
		);
		$('.dropdown').click(
			function (e) {
				e.stopPropagation();
				$(this).removeClass('open');
			}
		);
		$('body').tooltip({
			trigger: 'hover',
			selector: '[data-toggle="tooltip"]'
		});
	});
