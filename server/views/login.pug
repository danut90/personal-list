		title Personal Lists
		link(rel='stylesheet' href='lib/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet' href='lib/font-awesome/css/font-awesome.min.css')
		link(rel='stylesheet' href='dist/css/login-less.min.css')
		if !!bootstrappedUser
			script.
				window.bootstrappedUser = !{JSON.stringify(bootstrappedUser)}
	body.no-width
		.row.logIn
			.sp-container
				.sp-content
					h2#app-title-login.frame-1
						span Personal
						span    Lists
						span    App
					#form-login
						.panel.panel-login.login-form
							.panel-heading
								h3.panel-title.text-center Log In
							.panel-body
								form(accept-charset='UTF-8' role='form' action='/' method='post' ng-keypress='($event.which === 13)? submit:0')
									fieldset
										.form-group
											.input-group
												span.input-group-addon
													i.fa.fa-user.p-lr-2
												input.form-control(placeholder='Email' name='email')
										.form-group
											.input-group
												span.input-group-addon
													i.fa.fa-key
												input.form-control(placeholder='Password' name='password' type='password' value='')
										input.btn.btn-lg.btn-success.btn-block(type='submit' value='Log In')
										if !success
											h4.text-center.text-danger
												span #{message}
								div.p-top-15
									div.m-lr-30-pr
										form(accept-charset='UTF-8' role='form' action='/' method='post')
											input(type='hidden' name='email' value='guets.user@gmail.com')
											input(type='hidden' name='password' value='0000')
											button.btn.btn-sm.btn-default.btn-block(type='submit') Log In as Guest
